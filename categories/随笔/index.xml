&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&amp;lt;%- partial(&amp;#39;comment/livere&amp;#39;, {
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">key: post.slug,
